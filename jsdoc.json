{
  "source": {
    "include": ["./src"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "opts": {
    "encoding": "utf8",
    "destination": "docs/",
    "readme": "readme.md",
    "template": "node_modules/better-docs"
  },
  "tags": {
    "allowUnknownTags": ["component", "category"]
  },
  "plugins": ["node_modules/better-docs/component", "node_modules/better-docs/category"]
}
